<%- include('../partials/_html-head.ejs', {title: 'Destinations' }) %>
    <%- include('../partials/_nav-bar.ejs') %>



    <body>
    <main>
        <header>
            <h1><%= destination.country %></h1>
            <img src="<%= destination.image %>">
        </header>
            <section>
                <ul>
                    <a href="/destinations/<%= destination._id %>/notes/new">Add a new note</a>
                    <% destination.notes.forEach(note=> { %>
                    <li>

                     <figure>
                    <% if (note.image) { %>
                    <img src="<%= note.image %>" alt="Photo of <%= note.city %>"
                     style="max-width: 300px;">
                    <% } %>
                    <figcaption>
                    <strong> <%= note.name %></strong> shared a note from <strong> <%= note.city %></strong>
                     </figcaption>
                     </figure>
                    
                    <p><%= note.destinationNotes %></p>
                    
                     <% if(note.userHasFavorited) { %>
                    <p> You've favorited this note!</p>
                    <form action="/destinations/<%= destination._id %>/notes/<%= note._id %>/favorited-by/<%= user._id %>?_method=DELETE" method="POST">
                    <button type="submit">Unfavorite it!</button>
                    </form>
                    <% } else { %>
                     <p> You haven't favorited this note!</p>
                     <form action="/destinations/<%= destination._id %>/notes/<%= note._id %>/favorited-by/<%= user._id %>" method="POST">
                    <button type="submit">Favorite it!</button>
                    </form>
                    <% } %>

                    <% if (note.authorId == user._id) { %>
                      <form action="/destinations/<%= destination._id %>/notes/<%= note._id %>/edit">
                    <button type="submit">Edit Note</button>
                    </form>

                    <form action="/destinations/<%= destination._id %>/notes/<%= note._id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete Note</button>
                    </form>
                    </li>
                    <% } %>
                    <% }) %>
                    </ul>
                </section>

            </main>
        </body>

        </html>